{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "extends": ["eslint:recommended"],
  "globals": {
    "process": true
  },
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "no-unused-vars": "warn"
  }
}
